<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shouye"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_marginTop="380dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/usertext"
            android:layout_marginLeft="60dp"
            android:textColor="#F8F8FF"
            android:text="username:"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
        android:id="@+id/username"
        android:textColor="#F8F8FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/usertext"
            android:layout_marginLeft="8dp"
            android:layout_alignBaseline="@+id/usertext"
        android:hint="请输入用户名"
            android:textColorHint="#AAAAAA"/>
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/passwordtext"
            android:layout_marginLeft="60dp"
            android:textColor="#F8F8FF"
            android:text="password:"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/password"
            android:textColor="#F8F8FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/passwordtext"
            android:layout_marginLeft="8dp"
            android:layout_alignBaseline="@+id/passwordtext"
            android:hint="请输入密码"
            android:textColorHint="#AAAAAA"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/regist"
            android:text="注册"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <Button
        android:id="@+id/login"
        android:layout_toRightOf="@+id/regist"
        android:layout_marginLeft="180dp"
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>